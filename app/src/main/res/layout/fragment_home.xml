<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/activity_main_content_fragment"
    >
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:id="@+id/header_layout">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:background="@drawable/logo11"
                android:layout_gravity="left"
                android:layout_centerVertical="true"
                android:id="@+id/logo"
                android:layout_marginLeft="10dp"
            />



            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/cart"
                android:id="@+id/cart"
                             android:layout_gravity="center"
                android:layout_toLeftOf="@+id/total_cart"
                android:layout_centerVertical="true"
              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text=""
                android:textColor="#ffffff"
                android:id="@+id/total_cart"
                android:layout_marginRight="4dp"
                android:layout_gravity="center"
                 android:layout_toLeftOf="@+id/more"
                android:layout_centerVertical="true"
                />
         <ImageView
             android:layout_width="18dp"
             android:layout_height="30dp"
             android:background="@drawable/more"
             android:id="@+id/more"
             android:layout_marginRight="10dp"
             android:layout_gravity="center"
             android:layout_marginLeft="5dp"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true" />
         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:background="@drawable/notification"
             android:id="@+id/noti"
             android:layout_marginRight="10dp"
             android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/cart"
             android:layout_centerVertical="true"
             />
         <TextView
             android:id="@+id/total_noti"
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:layout_toLeftOf="@+id/cart"
             android:layout_marginTop="10dp"
             android:text="  1"
         android:visibility="gone"
             android:background="@drawable/notification_circle"
             android:textStyle="bold"
             android:textSize="10dp"
             android:textColor="#ffffff"/>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/header_layout"
        android:layout_marginTop="2dp"
        android:id="@id/username_layout"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/img1"
            android:layout_margin="1dp"
          android:layout_weight="1"
               />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/img2"
            android:layout_margin="2dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/img3"
            android:layout_margin="1dp"
            android:layout_weight="1"
              />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/activity_main_content_fragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/username_layout">

        <RelativeLayout
            android:id="@+id/activity_main_content_fragment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
           >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please start "
            android:id="@+id/msg"
            android:textSize="16dp"

            android:layout_marginLeft="10dp"

            android:layout_marginTop="300dp"
            android:textColor="#808080"

            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Follow "
            android:id="@+id/msg1"
            android:textSize="16dp"
          android:layout_toRightOf="@+id/msg"
            android:layout_marginTop="300dp"
            android:textColor="#3692B9"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="other users to get feed"
            android:id="@+id/msg3"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/msg1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="300dp"
            android:textColor="#808080"
            android:layout_centerVertical="true"/>

</RelativeLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#808080"
            android:dividerHeight="1dp" />

    </RelativeLayout>


</RelativeLayout>




