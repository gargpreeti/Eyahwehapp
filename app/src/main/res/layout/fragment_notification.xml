<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/activity_main_content_fragment2"
    >

       <RelativeLayout
           android:id="@+id/activity_main_content_fragment1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:background="@drawable/shape"
                  android:id="@+id/header_layout">

                     <ImageView
                         android:layout_width="110dp"
                         android:layout_height="25dp"
                         android:background="@drawable/logo11"
                         android:layout_gravity="left"
                         android:layout_centerVertical="true"
                         android:id="@+id/logo"
                         android:layout_toRightOf="@+id/header_layout1"
                         android:layout_marginLeft="10dp"
                         />
                     <RelativeLayout
                         android:layout_width="35dp"
                         android:layout_height="50dp"
                         android:background="@drawable/shape"
                         android:id="@+id/header_layout1">
                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="30dp"
                                android:background="@drawable/back"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_centerVertical="true"
                                android:id="@+id/back"
                                android:layout_alignParentStart="true"/>

                            <!--  <TextView
                                  android:layout_width="70dp"
                                  android:layout_height="wrap_content"
                                  android:text="Back"
                                  android:layout_marginRight="10dp"
                                  android:textColor="#ffffff"
                                  android:textSize="18dp"
                                  android:textStyle="bold"
                                  android:id="@+id/text_bck"
                                  android:layout_toRightOf="@+id/back"
                                  android:layout_gravity="center"
                                  android:layout_centerVertical="true"
                                  /> -->
                     </RelativeLayout>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Notifications"
                         android:layout_marginRight="7dp"
                         android:textColor="#ffffff"
                         android:textSize="15dp"
                         android:id="@+id/msg"
                         android:layout_centerVertical="true"
                         android:layout_alignParentEnd="true"
                         android:layout_gravity="right"
                         />
              </RelativeLayout>
       <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0.5dp"
           android:layout_below="@+id/header_layout"
            android:divider="#a9a9a9"
            android:layout_marginBottom="5dp"
            android:id="@+id/listview"
            />


</RelativeLayout>
       </LinearLayout>