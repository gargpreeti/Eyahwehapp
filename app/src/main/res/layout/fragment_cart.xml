<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/activity_main_content_fragment"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:id="@+id/header_layout">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:background="@drawable/logo11"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/logo"
            android:layout_marginLeft="10dp"
           android:layout_toRightOf="@+id/back" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:layout_alignParentStart="true"/>

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/text_bck"
            android:layout_toRightOf="@+id/back"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            /> -->

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@drawable/cart"

            android:id="@+id/cart"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=""
            android:textColor="#ffffff"
            android:id="@+id/total_cart"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/activity_main_content_fragment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/header_layout">
        <RelativeLayout

            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="invisible"
           android:layout_centerInParent="true"
            android:text="Your cart is empty"
            android:layout_gravity="center"
            />


        <ListView

            android:id="@+id/list_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#ffffff"
            android:dividerHeight="4dp"
            android:layout_marginBottom="120dp"/>

        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Tax(6%)"
            android:id="@+id/tv_servicetx"
            android:textColor="#000000"
            android:textSize="18dp"
android:layout_alignParentBottom="true"
            android:layout_above="@+id/tv_stotal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="95dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|bottom"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal"
            android:id="@+id/tv_stotal"
                android:textColor="#000000"
            android:textSize="18dp"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ "
            android:id="@+id/dlr"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="95dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right|bottom" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView6"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textSize="18dp"

          android:layout_alignParentRight="true"
             android:layout_marginTop="20dp"
            android:layout_marginBottom="95dp"
            android:layout_gravity="right|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ "
                android:id="@+id/dlr1"
                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:textSize="18dp"
                android:visibility="invisible"
                android:layout_toLeftOf="@+id/textView7"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="65dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right|bottom" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
           android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textSize="18dp"

            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="65dp"
            android:layout_gravity="right|bottom" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_alignParentBottom="true"
            android:id="@+id/order"
            android:textColor="#ffffff"
            android:background="#3696B9"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:layout_gravity="left|bottom"
            />
</RelativeLayout>
</FrameLayout>

</RelativeLayout>




