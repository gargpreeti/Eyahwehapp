<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/activity_main_content_fragment1">

    <RelativeLayout
        android:id="@+id/activity_main_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:id="@+id/header_layout">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:background="@drawable/logo11"
                android:layout_gravity="left"
                android:layout_centerVertical="true"
                android:id="@+id/logo"
                android:layout_toRightOf="@+id/back"
                android:layout_marginLeft="10dp"
             />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:background="@drawable/back"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:id="@+id/back"
                android:layout_alignParentStart="true"/>

         <!--   <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Back"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:id="@+id/text_bck"
                android:layout_toRightOf="@+id/back"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                /> -->



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/header_layout"
            android:id="@+id/username_layout">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:id="@+id/user_img"

                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#3692B9"
                android:textSize="20dp"
                android:id="@+id/text_username"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"

                android:layout_gravity="center"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/imageButton"
                android:text="Follow"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:background="#3692B9"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true" />


            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/msg"
                android:text="Message"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:background="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageButton"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/username_layout"
            android:id="@+id/bar_layout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/imageView4"


                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Handmade Soap"
                android:id="@+id/textView3"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/imageView4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:id="@+id/desc"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="#808080"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="simple dummy text"
                android:id="@+id/desc_text"
                android:textSize="18dp"
                android:textColor="#808080"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@+id/desc"
                android:layout_toRightOf="@+id/desc"
                android:layout_toEndOf="@+id/desc" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:id="@+id/price"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="#808080"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/desc"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 522.00"
                android:id="@+id/price_text"
                android:textSize="18dp"
                android:textColor="#3692B9"

                android:layout_alignTop="@+id/price"
                android:layout_alignLeft="@+id/desc_text"
                android:layout_alignStart="@+id/desc_text" />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/chkout"

                android:background="@drawable/checkout"
                android:layout_below="@+id/price_text"
                android:layout_alignLeft="@+id/price_text"
                android:layout_alignStart="@+id/price_text"
                android:layout_marginTop="31dp" />



        </RelativeLayout>



    </RelativeLayout>
</LinearLayout>