<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/activity_main_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:id="@+id/header_layout">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:background="@drawable/logo11"
                android:layout_gravity="left"
                android:layout_centerVertical="true"
                android:id="@+id/logo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/back"
              />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="30dp"
                android:background="@drawable/back"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:id="@+id/back"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/cart"
                android:id="@+id/cart"
                android:layout_marginRight="17dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text=""
                android:textColor="#ffffff"
                android:id="@+id/total_cart"
                android:layout_marginRight="4dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:background="@drawable/notification"-->
                <!--android:id="@+id/noti"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_toLeftOf="@+id/cart"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_centerVertical="true"-->
                <!--/>-->


        </RelativeLayout>



    <ScrollView
        android:id="@+id/scrollViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/header_layout"

        >

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/username_layout">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:id="@+id/user_img"

                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#3692B9"
                android:textSize="20dp"
                android:id="@+id/text_username"
                android:layout_toLeftOf="@+id/user_img"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                />
            <Button
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:id="@+id/imageButton"
                android:text="Follow"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:background="#3692B9"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:id="@+id/imageButton1"
                android:text="Unfollow"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:background="#3692B9"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:layout_alignParentEnd="true" />
            <Button
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:id="@+id/msg"
                android:text="Message"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:background="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageButton"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/username_layout"
            android:id="@+id/bar_layout"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imageView4"
                android:layout_below="@+id/bar_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/service_name"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"

                />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Description:"
    android:id="@+id/desc"
    android:layout_marginTop="15dp"
    android:textSize="16dp"
    android:textColor="#808080"
    android:layout_marginLeft="20dp"

    />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:id="@+id/desc_text"
    android:layout_marginTop="15dp"
    android:textSize="16dp"
    android:textColor="#808080"
    android:layout_marginLeft="25dp"
    android:layout_toRightOf="@+id/desc"

    />
                </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:id="@+id/price"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ "
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="75dp"
                  android:id="@+id/dlr"
                    android:layout_toRightOf="@+id/price"
                    android:textColor="#808080"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/price_text"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:textColor="#808080"

                    android:layout_toRightOf="@+id/dlr"
                    />

            </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date:"
                        android:id="@+id/sdt"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#808080"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/sdt_text"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#808080"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/sdt"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date:"
                        android:id="@+id/edt"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#808080"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/edt_text"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#808080"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/edt"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time:"
                        android:id="@+id/stime"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#808080"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/stime_text"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#808080"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/stime"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time:"
                        android:id="@+id/etime"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#808080"
                        android:layout_marginLeft="20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:id="@+id/etime_text"
                        android:layout_marginTop="15dp"
                        android:textSize="16dp"
                        android:textColor="#808080"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/etime"
                        />

                </LinearLayout>




                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/checkout"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/checkout"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true" />

</LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        </ScrollView>
        </RelativeLayout>
    </LinearLayout>

